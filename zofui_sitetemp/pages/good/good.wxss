.anipage {
    animation: anipage 0.5s;
    animation-fill-mode: forwards;
}

@-webkit-keyframes anipage {
    from {
        transform: scale(1);
    }

    to {
        transform: scale(0.9);
    }
}

@keyframes anipage {
    from {
        transform: scale(1);
    }

    to {
        transform: scale(0.9);
    }
}

.backpage {
    animation: backpage 0.5s;
    animation-fill-mode: forwards;
}

@-webkit-keyframes backpage {
    from {
        transform: scale(0.9);
    }

    to {
        transform: scale(1);
    }
}

@keyframes backpage {
    from {
        transform: scale(0.9);
    }

    to {
        transform: scale(1);
    }
}

.goodbuy_box {
    position: relative;
}

.buy_confirm {
    background: #ed414a;
    color: #fff;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.goodbuy_top {
    padding-bottom: 10rpx;
    border-bottom: 1px solid #eee;
}

.goodbuy_top_img {
    position: absolute;
    top: -50rpx;
    left: 20rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.goodbuy_top_l {

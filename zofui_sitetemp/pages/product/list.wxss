.art_list_item {
    padding: 10rpx;
    border-bottom: 1px solid #eee;
    background: #fff;
}

.art_item_in {
    background: #fff;
    align-items: start;
    padding: 10rpx;
}

.art_item_l {
    width: 200rpx;
    height: 180rpx;
    max-height: 300rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
    border-radius: 5rpx;
}

.art_item_l image {
    width: 100%;
}

.art_list_title {
    color: #222;
    font-size: 16px;
    font-weight: 500;
    overflow: hidden;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    display: box;
    -webkit-box-orient: vertical;
}

.art_item_r {
    padding-left: 20rpx;
    position: relative;
    height: 180rpx;
}

.art_list_time {
    color: #999;
    position: absolute;
    bottom: 0;
    font-size: 30rpx;
    width: 100%;
}

.page_artlist_head {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1;
}

.artlist_head {
    background: #fff;
    padding: 10rpx 10rpx 0 10rpx;
    white-space: nowrap;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
}

.art_head_item {
    padding: 10rpx 20rpx;
}

.pagelist {
    margin-top: 110rpx;
    background: #fff;
}

.art_act {
    border-bottom: 2px solid #ff5f27;
}

.art_itema_in {
    padding: 20rpx 0;
    align-items: center;
    font-size: 32rpx;
}

.art_itema_l {
    color: #222;
    font-size: 16px;
    font-weight: 500;
    overflow: hidden;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.art_itemb_top image {
    width: 100%;
    height: 337.5rpx;
}

.art_list_itemb {
    float: left;
    width: 49%;
    padding: 0;
    margin-bottom: 20rpx;
    border-bottom: 0;
    background: #fff;
    box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(0,0,0,0.1);
}

.art_list_itemb:nth-of-type(2n) {
    margin-left: 2%;
}

.art_itemb_bot {
    color: #222;
    font-weight: 500;
    overflow: hidden;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    height: 100rpx;
    padding: 10rpx;
}

.pagelist {
    background: #f6f6f6;
}
.page {
    padding: 30rpx;
}

.card_info {
    background-color: #fff;
    position: relative;
    margin-top: 50rpx;
    padding-bottom: 30rpx;
    padding: 20rpx;
}

.card_shopimg {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    position: absolute;
    top: -50rpx;
    left: 50%;
    margin-left: -50rpx;
}

.card_shopname {
    color: #999;
    padding-top: 30rpx;
    font-size: 28rpx;
    text-align: center;
}

.card_title {
    font-size: 33rpx;
    font-weight: 700;
    text-align: center;
    padding-top: 10rpx;
}

.card_use,.card_time {
    padding: 20rpx 0;
    color: #999;
    font-size: 28rpx;
}

.card_use text,.card_time text {
    color: #333;
}

.get_card_btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 50rpx;
}

.card_info_box {
    background-color: #fff;
    margin-top: 30rpx;
    padding: 20rpx;
}

.card_value {
    text-align: center;
    font-size: 38rpx;
}

.card_value text {
    font-size: 40rpx;
}

.btn_default {
    background-color: #ddd!important;
}

.qrcode_img {
    text-align: center;
}

.qrcode_img image {
    width: 500rpx;
    height: 500rpx;
}

.tel_box {
    align-items: center;
}

.tel_icon {
    padding: 0 20rpx;
}

.tel_icon image {
    width: 50rpx;
    height: 50rpx;
}

.tel_icon_l {
    border-right: 1px solid #eee;
}

.add_shopname {
    font-weight: 700;
}

.card_info_box image {
    width: 100%;
}
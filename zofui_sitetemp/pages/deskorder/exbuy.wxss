page {
    background: #fff;
    height: 100vh;
}

.exbuy_top {
    border-bottom: 1px solid #ddd;
    position: fixed;
    top: 0;
    width: 100%;
}

.exbuy_top_head {
    align-items: center;
    padding: 20rpx;
    background: #ed414a;
    color: #fff;
    height: 140rpx;
}

.exbuy_top_head image,.exbuy_top_headimg {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.exbuy_top_head .head_r {
    padding-left: 10rpx;
    font-size: 26rpx;
}

.exbuy_btn_item {
    width: 50%;
    text-align: center;
}

.exbuy_btn_item text {
    padding: 20rpx 30rpx;
    display: inline-block;
}

.exbuy_actbtn {
    border-bottom: 2px solid #ed414a;
}

.exbuy_top_btn {
    height: 90rpx;
}

.gsort_l {
    background: #eee;
    text-align: center;
    font-size: 30rpx;
    color: #666666;
    width: 200rpx;
}

.gsort_bot {
    height: 100vh;
    position: fixed;
    top: 270rpx;
    left: 0;
    width: 100%;
    background: #fff;
}

.gsort_l_item {
    font-size: 28rpx;
    overflow: hidden;
    padding: 30rpx 10rpx;
}

.gsort_r {
    width: 550rpx;
    padding: 20rpx;
    padding-bottom: 200rpx;
}

.gsort_l_bot {
    height: 200rpx;
}

.gsort_l_act {
    background: #fff;
    color: #ed414a;
}

.gsort_item_box {
    padding: 20rpx 0;
}

.gsort_item_title {
    text-align: left;
    padding: 20rpx 0;
    color: #ed414a;
    font-size: 26rpx;
    border-bottom: 1px solid #eee;
}

.gsort_item_name {
    font-size: 26rpx;
    color: #5d5d5d;
    overflow: hidden;
}

.gsort_r_item {
    overflow: hidden;
    padding-bottom: 10rpx;
}

.gsort_item {
    padding: 10rpx 0;
}

.gsort_item image {
    width: 120rpx;
    height: 120rpx;
}

.gsort_item_r {
    padding-left: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #eee;
}

.gsort_name {
    font-size: 30rpx;
    font-weight: 500;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    display: -webkit-box;
}

.gsort_desc {
    font-size: 24rpx;
    color: #999;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    padding-bottom: 10rpx;
}

.gsort_data {
    align-items: flex-end;
    padding-top: 10rpx;
}

.gsort_sales {
    color: #999;
    font-size: 26rpx;
}

.gsort_price {
    color: #ed414a;
    font-size: 26rpx;
}

.gsort_price text {
    font-size: 34rpx;
}

.change_item {
    display: inline-block;
    margin: 0 10rpx;
    font-size: 32rpx;
}

.change_btn {
    width: 50rpx;
    height: 50rpx;
    border: 1px solid #ed414a;
    border-radius: 37% 37% 37% 37% / 37% 37% 37% 37%;
    text-align: center;
    font-weight: 700;
    font-size: 36rpx;
    line-height: 50rpx;
}

.minus {
    border: 1px solid #666;
    color: #ed414a;
}

.add {
    background: #ed414a;
    color: #fff;
}

.num {
    font-size: 30rpx;
    line-height: 40rpx;
}

.exbuy_footer {
    height: 100rpx;
    line-height: 100rpx;
    background: rgba(58,54,53,0.95);
    color: #fff;
}

.exbuy_footer_in {
    position: relative;
}

.footer_l {
    width: 500rpx;
    text-align: left;
    padding-left: 30rpx;
}

.footer_r {
    width: 250rpx;
}

.cart_num {
    position: relative;
    width: 100rpx;
    height: 100rpx;
    float: left;
}

.cart_total {
    float: left;
    padding-left: 20rpx;
}

.cart_total text {
    font-size: 40rpx;
}

.cart_num .zan-icon {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    border-radius: 50%;
    background: #000;
    color: #fff;
    font-size: 60rpx;
    text-align: center;
    bottom: 30rpx;
}

.cart_num .zan-badge__count {
    right: 5rpx;
    top: 0rpx;
}

.change_btn_disabled {
    background: #ddd;
    color: #fff;
    border: 1px solid #ddd;
}

.mask {
    background: rgba(34,34,34,0.75);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 11;
    width: 100%;
    height: 100%;
}

.rule_in {
    position: fixed;
    z-index: 12;
    background: #fff;
    width: 600rpx;
    left: 55rpx;
    padding: 20rpx;
    top: 100rpx;
}

.rule_top_close {
    font-size: 70rpx;
    line-height: 50rpx;
    color: #999;
}

.rule_top_title {
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.rule_in_item {
    padding: 12rpx 0;
    align-items: center;
    max-height: 700rpx;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.rule_btn {
    text-align: right;
}

.rule_bot {
    padding: 20rpx 0 10rpx 0;
    align-items: center;
    border-top: 1px solid #eee;
}

.rule_list {
    padding: 0 20rpx;
    overflow: hidden;
}

.rule_list .rule_item {
    border: 1px solid #ddd;
    display: block;
    padding: 5rpx 30rpx;
    text-align: center;
    border-radius: 100rpx;
    margin: 10rpx;
    float: left;
}

.rule_name {
    width: 100rpx;
}

.rule_pruce {
    color: #ed414a;
    font-size: 26rpx;
}

.rule_pruce text {
    font-size: 40rpx;
}

.rule_top {
    padding-bottom: 20rpx;
    border-bottom: 1px solid #eee;
}

.gsort_sbtn text {
    display: inline-block;
    padding: 5rpx 30rpx;
    border-radius: 60rpx;
    border: 1px solid #ddd;
    color: #ed414a;
    font-size: 28rpx;
}

.actitem {
    background: #ed414a;
    color: #fff;
    border: 0;
}

.anima {
    transform-origin: center bottom;
    animation: bounce 0.6s ease-in;
}

@-webkit-keyframes bounce {
    50% {
        transform: scale(1.2);
    }

    80% {
        transform: scale(1);
    }
}

@keyframes bounce {
    50% {
        transform: scale(1.2);
    }

    80% {
        transform: scale(1);
    }
}

.cartbox {
    position: relative;
    z-index: 10;
}

.cartbox_in {
    min-height: 500rpx;
    max-height: 700rpx;
    overflow-y: auto;
    background: #fff;
    padding: 20rpx;
    padding-right: 0;
}

.cartbox_item {
    align-items: center;
    padding: 15rpx 0;
    border-bottom: 1px solid #eee;
}

.cartbox_title {
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.cartbox_rule {
    color: #999;
    font-size: 25rpx;
}

.cartbox_item_price {
    color: #ed414a;
    font-size: 26rpx;
    white-space: nowrap;
}

.cartbox_item_price {
    font-size: 33rpx;
    width: 150rpx;
}

.cartbox_item_btn {
    width: 190rpx;
}

.cartbox_bot {
    text-align: right;
    padding: 20rpx 20rpx 110rpx 0;
    border-top: 1px solid #eee;
}

.cartbox_bot text {
    border: 1px solid #ed414a;
    color: #ed414a;
    display: inline-block;
    padding: 1rpx 25rpx;
    border-radius: 5rpx;
}

.prepay {
    background: #44b549;
}

.shop_info {
    padding: 20rpx;
}

.shoppic image {
    width: 110rpx;
    height: 110rpx;
    margin: 0 20rpx 20rpx 0;
}

.head_shopname {
    font-size: 35rpx!important;
}
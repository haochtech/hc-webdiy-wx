page {
    height: 100vh;
}

.goodlist_top {
    padding: 15rpx 0;
    background: #fff;
    width: 100%;
}

.goodlist_order_item {
    width: 25%;
    padding: 5rpx 0;
    text-align: center;
    font-size: 28rpx;
    color: #666;
}

.goodlist_order_item .zan-icon-arrow {
    transform: rotate(90deg);
    padding-left: 5rpx;
    display: inline-block;
}

.priceuptodown {
    animation: priceuptodown 0.5s;
    animation-fill-mode: forwards;
}

@-webkit-keyframes priceuptodown {
    from {
        transform: rotate(90deg);
    }

    to {
        transform: rotate(-90deg);
    }
}

@keyframes priceuptodown {
    from {
        transform: rotate(90deg);
    }

    to {
        transform: rotate(-90deg);
    }
}

.pricedowntoup {
    animation: pricedowntoup 0.5s;
    animation-fill-mode: forwards;
}

@-webkit-keyframes pricedowntoup {
    from {
        transform: rotate(-90deg);
    }

    to {
        transform: rotate(-270deg);
    }
}

@keyframes pricedowntoup {
    from {
        transform: rotate(-90deg);
    }

    to {
        transform: rotate(-270deg);
    }
}

.goodlist_goodbox {
    margin-top: 110rpx;
}

.goodlist_item {
    width: 48%;
    background: #fff;
    margin-top: 10rpx;
    float: left;
    border-radius: 5rpx;
}

.goodlist_item:nth-of-type(2n) {
    margin-left: 2%;
}

.gooditem_top {
    width: 340rpx;
    height: 340rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.gooditem_top image {
    width: 100%;
}

.gooditem_title {
    color: #666;
    height: 90rpx;
    font-size: 28rpx;
    font-weight: 400;
    overflow: hidden;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: box;
    -webkit-box-orient: vertical;
}

.gooditem_bot {
    position: relative;
}

.gooditem_bot_r .buy_icon {
    background: #ed414a;
    color: #fff;
    padding: 10rpx 30rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
    border-radius: 5rpx;
}

.nowprice {
    color: #ed414a;
    font-size: 28rpx;
    font-weight: 700;
}

.oldprice {
    color: #999;
    font-size: 26rpx;
    text-decoration: line-through;
    white-space: nowrap;
    overflow: hidden;
}

.goodlist_sales {
    color: #999;
    font-size: 28rpx;
}

.goodlist_item_in {
    padding: 10rpx;
}

.order_act {
    color: #ed414a;
}

.goodlist_headbox {
    position: fixed;
    top: 0;
    width: 100%;
    left: 0;
    background: #fff;
    z-index: 1;
}

.goodlist_headlist {
    width: 100%;
    white-space: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}

.goodlist_head {
    border-bottom: 1px solid #eee;
}

.gsort_item {
    display: inline-block;
    padding: 20rpx;
    font-size: 28rpx;
    color: #333;
}

.gsort_act {
    color: #ed414a;
    border-bottom: 1px solid #ed414a;
}

.order_byprice_box {
    margin: 0 auto;
    text-align: center;
    width: 100rpx;
}

.order_byprice_icon {
    width: 26rpx;
}

.order_byprice_icon image {
    width: 100%;
}